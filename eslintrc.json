{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-fallthrough": "off",
    "semi": ["error", "always"],
    "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
    "no-async-promise-executor": "off"
  }
}
